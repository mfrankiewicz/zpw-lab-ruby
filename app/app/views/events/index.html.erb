<p id="notice"><%= notice %></p>

<h1>Events</h1>
<% if flash[:message] %>
   <p id="message"><%= flash[:message] %></p>
 <% end %>

<div>
    <%= form_for :filters, url: "events", method: "get" do |form| %>
        <%= form.text_field :date_from, placeholder: "rrrr-mm-dd" %>
        <%= form.text_field :date_to, placeholder: "rrrr-mm-dd" %>
        <%= form.submit 'filter' %>
    <% end  %>

    <% if @date_from.to_date != nil && @date_to.to_date != nil %>
        Sorting by date from <strong><%= @date_from %></strong> to <strong><%= @date_to %></strong>
    <% end %>
</div>
<table>
  <thead>
    <tr>
      <% if @authorized %>
        <th>Status</th>
      <% end %>
      <th>Artist</th>
      <th>Description</th>
      <th>Price low</th>
      <th>Price high</th>
      <th>Event date</th>
      <th>Adult restriction</th>
      <th>Seat count</th>
      <% if @authorized %>
        <th>Tickets sold</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <% if @authorized %>
          <td>
              <% if event.event_date <  Date.today %>
                archive
              <% else %>
                active
              <% end %>
          </td>
        <% end %>
        <td><%= event.artist %></td>
        <td><%= event.description %></td>
        <td><%= event.price_low %></td>
        <td><%= event.price_high %></td>
        <td><%= event.event_date %></td>
        <td><%= event.adult %></td>
        <td><%= event.seat_count %></td>
        <% if @authorized %>
        <td><%= event.tickets.count %></td>
        <% end %>
        <td><%= link_to 'Show', event %></td>
        <% if @authorized %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @authorized %>
<%= link_to 'New Event', new_event_path %>
<% end %>
